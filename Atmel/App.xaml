<Application
    x:Class="Atmel.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Atmel"
    xmlns:converters="using:Atmel.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <!-- Value Converters (MVVM Pattern) -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:LedStatusConverter x:Key="LedStatusConverter"/>
        <converters:LedTextConverter x:Key="LedTextConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        
        <!-- Button Styles -->
        <Style x:Key="BtnMaly" TargetType="Button">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="LightBlue" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style x:Key="BtnDuzy" TargetType="Button">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="LightGreen" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Application.Resources>

</Application>
