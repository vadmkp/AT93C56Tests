<Page
    x:Class="Atmel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Atmel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1360" Height="600"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="629*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   FontSize="24"
                   TextWrapping="WrapWholeWords" 
                   Text="Aplkacja do zdalnego sterowania urządzeniami Arduino przez Bluetooth." />


        <StackPanel Orientation="Horizontal" Grid.Row="1">

            <Button Name="btnList" 
                    Click="btnList_Click" 
                    Content="List" 
                    Style="{StaticResource BtnMaly}"/>
            <Button Name="btnStart"
                    Click="btnStart_Click" 
                    Content="Start" 
                    Style="{StaticResource BtnMaly}"/>
            <Button Name="btnOn"
                    Click="btnOn_Click" 
                    Content="Led On" 
                    IsEnabled="False" 
                    Style="{StaticResource BtnMaly}"/>

            <Button Name="btnOff" 
                    Click="btnOff_Click"
                    Content="Led Off" 
                    IsEnabled="False" 
                    Style="{StaticResource BtnMaly}"/>

            <Button Name="btnSerial01" 
                    Click="btnSerial01_Click"
                    Content="Serial 01" 
                    IsEnabled="True" 
                    Style="{StaticResource BtnMaly}"/>

            <Button Name="btnBlueLE01" 
                    Click="btnBlueLE01_Click"
                    Content="BT LE 01" 
                    IsEnabled="True"
                    Style="{StaticResource BtnMaly}"/>

            <Button Name="btnBlueLE02" 
                    Click="btnBlueLE02_Click"
                    Content="BT LE 02" 
                    IsEnabled="True"
                    Style="{StaticResource BtnMaly}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Name="BtnBlueLE03"
                    Click="BtnBlueLE03_Click"
                    Content="BT LE 03  - Server" 
                    IsEnabled="True" 
                    Style="{StaticResource BtnDuzy}" />
            <Button Name="BtnBlueLE04"
                    Click="BtnBlueLE04_Click"
                    Content="BT LE 03  - Client" 
                    IsEnabled="True" 
                    Style="{StaticResource BtnDuzy}" />
        </StackPanel>
    </Grid>
</Page>
